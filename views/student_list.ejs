<link rel="stylesheet" href="/css/student_list.css">
<div class="student-list-container">
    <div class="header-section">
        <h1>Student Management</h1>
        <p>Manage and track student information and interviews</p>
        <a href="/students/add_form" class="add-student-btn">Add New Student</a>
    </div>

    <div class="table-container">
        <table class="student-table">
            <thead>
                <tr>
                    <th>Batch</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>DSA Score</th>
                    <th>Web Dev Score</th>
                    <th>React Score</th>
                    <th>Interviews</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(student of students){ %>
                <tr>
                    <td><%= student.batch %></td>
                    <td><%= student.name %></td>
                    <td><%= student.email %></td>
                    <td><%= student.contact %></td>
                    <td><%= student.dsa %></td>
                    <td><%= student.webd %></td>
                    <td><%= student.react %></td>
                    <td>
                        <% if(student.interviews.length) { %>
                            <% for(let company of student.interviews){ %>
                              <span class="interview-tag"><%= company.company %></span>

                            <% } %>
                        <% } else { %>
                            <span class="no-interview">None</span>
                        <% } %>
                    </td>
                    <td>
                        <form action="/students/delete/<%= student._id %>" method="post" class="delete-form">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

