<link rel="stylesheet" href="/css/form_add_interview.css">

<div class="form-page">
    <div class="form-card">
        <div class="form-header">
            <h2>Add Interview</h2>
            <p>Assign interview details to a student</p>
        </div>

        <form action="/interviews/create" method="post">

            <div class="form-group">
                <label>Student</label>
                <select name="name" required>
                    <option value="">Select student</option>
                    <% for(let student of students){ %>
                        <option value="<%= student._id %>"><%= student.name %></option>
                    <% } %>
                </select>
            </div>

            <div class="form-group">
                <label>Company</label>
                <input type="text" name="company" placeholder="e.g. Google, Amazon" required>
            </div>

            <div class="form-group">
                <label>Interview Date</label>
                <input type="date" name="date" required>
            </div>

            <button type="submit" class="submit-btn">
                Add Interview
            </button>

        </form>
    </div>
</div>
