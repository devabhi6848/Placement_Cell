
<header class="header">
    <div class="logo">
        <a href="/"><img src="/images/coding-ninjas-logos-idFrWdCkB5.png" alt="Placement Cell"></a>
    </div>

    <nav class="nav">
        <% if(locals.user){ %>
            <a href="/students" class="nav-link">Students</a>
            <a href="/interviews" class="nav-link">Interviews</a>
            <a href="/interviews/add" class="nav-link">Schedule Interview</a>
            <a href="/downloads/download-csv" class="nav-link">Reports</a>
        <% } else { %>
            <a href="/users/sign-in" class="nav-link">Sign In</a>
            <a href="/users/sign-up" class="nav-link">Sign Up</a>
        <% } %>
    </nav>

    <% if(locals.user){ %>
        <div class="user-actions">
            <span class="welcome-text">Welcome, <%= locals.user.name %></span>
            <form action="/users/destroySession" class="logout-form">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>
    <% } %>
</header>
